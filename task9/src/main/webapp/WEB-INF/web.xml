<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>PhotoPostServlet</servlet-name>
        <servlet-class>by.tolkun.plenta.servlet.PhotoPostServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PhotoPostServlet</servlet-name>
        <url-pattern>/photo-post</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PhotoPostsServlet</servlet-name>
        <servlet-class>by.tolkun.plenta.servlet.PhotoPostsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PhotoPostsServlet</servlet-name>
        <url-pattern>/photoposts</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UploadServlet</servlet-name>
        <servlet-class>by.tolkun.plenta.servlet.UploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadServlet</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>

</web-app>